@model dynamic
@{
    ViewData["Title"] = "Reports";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="bg-white shadow-lg rounded-lg p-6 mb-6">
    <h2 class="text-2xl font-semibold text-gray-800 mb-6">System Overview</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-6 rounded-lg shadow border border-blue-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-blue-500 bg-opacity-10">
                    <i class="fas fa-users text-blue-500 text-2xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-600">Total Users</h3>
                    <p class="text-2xl font-bold text-gray-800">@ViewBag.TotalUsers</p>
                </div>
            </div>
        </div>
        
        <div class="bg-gradient-to-br from-green-50 to-green-100 p-6 rounded-lg shadow border border-green-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-green-500 bg-opacity-10">
                    <i class="fas fa-building text-green-500 text-2xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-600">Total Venues</h3>
                    <p class="text-2xl font-bold text-gray-800">@ViewBag.TotalVenues</p>
                </div>
            </div>
        </div>
        
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-6 rounded-lg shadow border border-purple-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-purple-500 bg-opacity-10">
                    <i class="fas fa-calendar-check text-purple-500 text-2xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-600">Total Bookings</h3>
                    <p class="text-2xl font-bold text-gray-800">@ViewBag.TotalBookings</p>
                </div>
            </div>
        </div>
        
        <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 p-6 rounded-lg shadow border border-yellow-200">
            <div class="flex items-center">
                <div class="p-3 rounded-full bg-yellow-500 bg-opacity-10">
                    <i class="fas fa-rupee-sign text-yellow-500 text-2xl"></i>
                </div>
                <div class="ml-4">
                    <h3 class="text-lg font-medium text-gray-600">Total Revenue</h3>
                    <p class="text-2xl font-bold text-gray-800">₹@ViewBag.TotalRevenue.ToString("N0")</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <div class="bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">User Analytics</h2>
        <div class="h-64 bg-gray-50 rounded-lg p-4">
            <div class="h-full flex items-center justify-center">
                <div class="text-center">
                    <i class="fas fa-chart-line text-6xl text-gray-300 mb-3"></i>
                    <p class="text-gray-500">User growth and activity charts would be displayed here</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="bg-white shadow-lg rounded-lg p-6">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Venue Analytics</h2>
        <div class="h-64 bg-gray-50 rounded-lg p-4">
            <div class="h-full flex items-center justify-center">
                <div class="text-center">
                    <i class="fas fa-chart-bar text-6xl text-gray-300 mb-3"></i>
                    <p class="text-gray-500">Venue utilization and performance metrics would be displayed here</p>
                </div>
            </div>
        </div>
    </div>
</div>

