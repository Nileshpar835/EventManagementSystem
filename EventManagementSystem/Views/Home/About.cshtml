@{
    ViewData["Title"] = "About - EventSpot";
    Layout = "_Layout";
}

<div class="bg-gradient-to-b from-primary-600 to-primary-800 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
        <div class="text-center">
            <h1 class="text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl">
                About EventSpot
            </h1>
            <p class="mt-6 text-xl text-primary-100 max-w-3xl mx-auto">
                A modern event management system designed to streamline venue booking and event organization
            </p>
        </div>
    </div>
</div>

<div class="bg-white dark:bg-gray-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">

        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Project Overview</h2>

        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-8 mb-12">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <p class="text-gray-600 dark:text-gray-300">
                        EventSpot is a comprehensive event management system developed as part of the academic curriculum. 
                        The system is designed to provide a seamless experience for venue booking and event organization, 
                        featuring modern technologies and best practices in web development.
                    </p>
            </div>
        </div>
        <div class="mb-12">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Key Features</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md">
                    <div class="h-12 w-12 rounded-md bg-primary-100 dark:bg-primary-900 flex items-center justify-center mb-4">
                        <i class="fas fa-search text-xl text-primary-600 dark:text-primary-400"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Smart Search</h3>
                    <p class="text-gray-600 dark:text-gray-300">Advanced search functionality with filters for location, capacity, and price range.</p>
                </div>
                
                <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md">
                    <div class="h-12 w-12 rounded-md bg-primary-100 dark:bg-primary-900 flex items-center justify-center mb-4">
                        <i class="fas fa-calendar-alt text-xl text-primary-600 dark:text-primary-400"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Easy Booking</h3>
                    <p class="text-gray-600 dark:text-gray-300">Streamlined booking process with real-time availability checking and instant confirmation.</p>
                </div>
                
                <div class="bg-white dark:bg-gray-800 rounded-lg p-6 shadow-md">
                    <div class="h-12 w-12 rounded-md bg-primary-100 dark:bg-primary-900 flex items-center justify-center mb-4">
                        <i class="fas fa-star text-xl text-primary-600 dark:text-primary-400"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Reviews & Ratings</h3>
                    <p class="text-gray-600 dark:text-gray-300">Transparent review system helping users make informed decisions.</p>
                </div>
            </div>
        </div>
        <div>
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Technologies Used</h2>
            <div class="bg-white dark:bg-gray-800 rounded-xl p-8 shadow-lg">
                <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                    <div class="text-center">
                        <div class="h-16 w-16 mx-auto bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mb-4">
                            <i class="fab fa-microsoft text-2xl text-blue-600 dark:text-blue-400"></i>
                        </div>
                        <h3 class="text-sm font-medium text-gray-900 dark:text-white">ASP.NET Core</h3>
                    </div>
                    
                    <div class="text-center">
                        <div class="h-16 w-16 mx-auto bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mb-4">
                            <i class="fas fa-database text-2xl text-blue-600 dark:text-blue-400"></i>
                        </div>
                        <h3 class="text-sm font-medium text-gray-900 dark:text-white">SQL Server</h3>
                    </div>
                    
                    <div class="text-center">
                        <div class="h-16 w-16 mx-auto bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mb-4">
                            <i class="fab fa-css3-alt text-2xl text-blue-600 dark:text-blue-400"></i>
                        </div>
                        <h3 class="text-sm font-medium text-gray-900 dark:text-white">Tailwind CSS</h3>
                    </div>
                    
                    <div class="text-center">
                        <div class="h-16 w-16 mx-auto bg-blue-100 dark:bg-blue-900 rounded-full flex items-center justify-center mb-4">
                            <i class="fab fa-js text-2xl text-blue-600 dark:text-blue-400"></i>
                        </div>
                        <h3 class="text-sm font-medium text-gray-900 dark:text-white">JavaScript</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 