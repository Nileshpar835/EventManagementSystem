@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8 bg-white rounded-lg shadow-lg p-8 text-center">
        <div>
            <div class="flex justify-center">
                <span class="text-red-600 text-6xl">
                    <i class="fas fa-ban"></i>
                </span>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Access Denied
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                You do not have permission to access this resource.
            </p>
        </div>
        
        <div class="mt-8">
            <a asp-controller="Home" asp-action="Index" class="w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-300">
                Return to Home
            </a>
        </div>
    </div>
</div> 