@model EventManagementSystem.Models.Venue
@{
    ViewData["Title"] = "Delete Venue";
    Layout = "_RegistrarLayout";
}

<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <nav class="flex mb-4" aria-label="Breadcrumb">
            <ol class="flex items-center space-x-4">
                <li>
                    <div>
                        <a href="@Url.Action("Index", "Registrar")" class="text-gray-400 hover:text-gray-500">
                            <i class="fas fa-home"></i>
                            <span class="sr-only">Dashboard</span>
                        </a>
                    </div>
                </li>
                <li>
                    <div class="flex items-center">
                        <i class="fas fa-chevron-right text-gray-400 text-sm"></i>
                        <a href="@Url.Action("MyVenues", "Registrar")" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">My Venues</a>
                    </div>
                </li>
                <li>
                    <div class="flex items-center">
                        <i class="fas fa-chevron-right text-gray-400 text-sm"></i>
                        <a href="@Url.Action("VenueDetails", "Registrar", new { id = Model.Id })" class="ml-4 text-sm font-medium text-gray-500 hover:text-gray-700">@Model.Name</a>
                    </div>
                </li>
                <li>
                    <div class="flex items-center">
                        <i class="fas fa-chevron-right text-gray-400 text-sm"></i>
                        <span class="ml-4 text-sm font-medium text-gray-500" aria-current="page">Delete</span>
                    </div>
                </li>
            </ol>
        </nav>
        <h1 class="text-3xl font-bold text-gray-800">Delete Venue</h1>
        <p class="text-gray-600 mt-2">This action cannot be undone</p>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-center">
                <div class="flex-shrink-0 h-12 w-12 bg-red-100 rounded-full flex items-center justify-center">
                    <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
                </div>
                <div class="ml-4">
                    <h2 class="text-lg font-medium text-gray-900">
                        Are you sure you want to delete this venue?
                    </h2>
                    <p class="text-sm text-gray-500 mt-1">
                        This action will permanently remove the venue and all associated data. This cannot be undone.
                    </p>
                </div>
            </div>
        </div>

        <div class="p-6">
            <div class="flex flex-col md:flex-row">
                <div class="md:w-1/3 mb-4 md:mb-0 md:mr-6">
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="w-full h-64 object-cover rounded-lg shadow-sm">
                </div>
                
                <div class="md:w-2/3">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">@Model.Name</h2>
                    
                    <div class="space-y-4">
                        <div>
                            <h3 class="text-lg font-semibold text-gray-700">Description</h3>
                            <p class="text-gray-600">@Model.Description</p>
                        </div>
                        
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-700">Location</h3>
                                <p class="text-gray-600">@Model.Location</p>
                            </div>
                            
                            <div>
                                <h3 class="text-lg font-semibold text-gray-700">Address</h3>
                                <p class="text-gray-600">@Model.Address</p>
                            </div>
                        </div>
                        
                        <div class="grid grid-cols-3 gap-4">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-700">Capacity</h3>
                                <p class="text-gray-600">@Model.Capacity people</p>
                            </div>
                            
                            <div>
                                <h3 class="text-lg font-semibold text-gray-700">Size</h3>
                                <p class="text-gray-600">@Model.Size sq ft</p>
                            </div>
                            
                            <div>
                                <h3 class="text-lg font-semibold text-gray-700">Price</h3>
                                <p class="text-gray-600">â‚¹@Model.PricePerHour per hour</p>
                            </div>
                        </div>
                        
                        <div>
                            <h3 class="text-lg font-semibold text-gray-700">Status</h3>
                            <p class="text-gray-600">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(Model.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                    @(Model.IsActive ? "Active" : "Inactive")
                                </span>
                            </p>
                        </div>
                        
                        <div>
                            <h3 class="text-lg font-semibold text-gray-700">Created</h3>
                            <p class="text-gray-600">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-8 border-t border-gray-200 pt-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4">Impact of Deletion</h3>
                
                <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-exclamation-circle text-yellow-400"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-yellow-700">
                                Deleting this venue will also permanently remove all associated bookings, reviews, and other data.
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="space-y-4">
                    <div class="flex items-center">
                        <i class="fas fa-calendar-check text-gray-400 w-6 text-center"></i>
                        <span class="ml-2 text-gray-600">All bookings for this venue will be canceled</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-star text-gray-400 w-6 text-center"></i>
                        <span class="ml-2 text-gray-600">All reviews for this venue will be deleted</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-image text-gray-400 w-6 text-center"></i>
                        <span class="ml-2 text-gray-600">All venue images will be removed</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-chart-line text-gray-400 w-6 text-center"></i>
                        <span class="ml-2 text-gray-600">Venue analytics data will be lost</span>
                    </div>
                </div>
            </div>

            <div class="mt-8 flex justify-end space-x-4">
                <a href="@Url.Action("VenueDetails", "Registrar", new { id = Model.Id })" class="inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-all duration-300">
                    Cancel
                </a>
                <form asp-action="DeleteVenue" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-300">
                        Delete Permanently
                    </button>
                </form>
            </div>
        </div>
    </div>
</div> 