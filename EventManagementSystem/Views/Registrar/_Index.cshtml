@model EventManagementSystem.Models.Registrar

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition-shadow duration-300">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-primary-500 rounded-md p-3">
                    <i class="fas fa-building text-white text-xl"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Your Venues
                        </dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">
                                @Model.VenuesCount
                            </div>
                           
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <a href="#" data-controller="Registrar" data-action="Venues" data-ajax="true" class="text-sm text-primary-600 hover:text-primary-800 flex justify-between items-center">
                <span>Manage venues</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition-shadow duration-300">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-indigo-500 rounded-md p-3">
                    <i class="fas fa-calendar-check text-white text-xl"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Active Bookings
                        </dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">
                                @Model.ActiveBookingsCount
                            </div>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <a href="#" data-controller="Registrar" data-action="Bookings" data-ajax="true" class="text-sm text-primary-600 hover:text-primary-800 flex justify-between items-center">
                <span>View bookings</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
    
    <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition-shadow duration-300">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-yellow-500 rounded-md p-3">
                    <i class="fas fa-star text-white text-xl"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Average Rating
                        </dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">
                                @Model.AverageRating
                            </div>
                            
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <a href="#" data-controller="Registrar" data-action="Reviews" data-ajax="true" class="text-sm text-primary-600 hover:text-primary-800 flex justify-between items-center">
                <span>See reviews</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
    <div class="bg-white overflow-hidden shadow-lg rounded-lg hover:shadow-xl transition-shadow duration-300">
        <div class="p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 bg-green-500 rounded-md p-3">
                    <i class="fas fa-rupee-sign text-white text-xl"></i>
                </div>
                <div class="ml-5 w-0 flex-1">
                    <dl>
                        <dt class="text-sm font-medium text-gray-500 truncate">
                            Total Revenue
                        </dt>
                        <dd class="flex items-baseline">
                            <div class="text-2xl font-semibold text-gray-900">
                                ₹@Model.TotalRevenue.ToString("N0")
                            </div>
                            
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
            <a href="#" data-controller="Registrar" data-action="Reports" data-ajax="true" class="text-sm text-primary-600 hover:text-primary-800 flex justify-between items-center">
                <span>View reports</span>
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</div>
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
    <div class="lg:col-span-2 bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
                <i class="fas fa-calendar-alt mr-2 text-primary-500"></i>
                Recent Bookings
            </h3>
            <a href="#" data-controller="Registrar" data-action="Bookings" data-ajax="true" class="text-sm text-primary-600 hover:text-primary-800">
                View All
            </a>
        </div>
        <div class="px-4 py-5 sm:p-6">
            @if (Model.RecentBookings != null && Model.RecentBookings.Any())
            {
                <div class="divide-y divide-gray-200">
                    @foreach (var booking in Model.RecentBookings)
                    {
                        <div class="py-4 hover:bg-gray-50 transition-colors duration-150 rounded-md px-2">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center">
                                   <img class="h-10 w-10 rounded-full object-cover"
     src="https://ui-avatars.com/api/?name=@(Uri.EscapeDataString(booking.CustomerName))&background=0284c7&color=fff"
     alt="@booking.CustomerName">

                                    <div class="ml-3">
                                        <div class="text-sm font-medium text-gray-900">
                                            @booking.CustomerName
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            @booking.CustomerEmail
                                        </div>
                                    </div>
                                </div>
                                <div class="flex items-center">
                                    <span class="px-2 py-1 text-xs rounded-full @(booking.Status == "Confirmed" ? "bg-green-100 text-green-800" : booking.Status == "Pending" ? "bg-yellow-100 text-yellow-800" : "bg-red-100 text-red-800")">
                                        @booking.Status
                                    </span>
                                </div>
                            </div>
                            <div class="mt-2 sm:flex sm:justify-between">
                                <div class="sm:flex">
                                    <div class="mr-6 flex items-center text-sm text-gray-500">
                                        <i class="fas fa-building mr-1.5 text-gray-400"></i>
                                        @booking.VenueName
                                    </div>
                                    <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                                        <i class="fas fa-calendar mr-1.5 text-gray-400"></i>
                                        @booking.BookingDate.ToString("MMM dd, yyyy")
                                    </div>
                                </div>
                                <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
                                    <i class="fas fa-clock mr-1.5 text-gray-400"></i>
                                    @booking.StartTime - @booking.EndTime
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-10">
                    <i class="fas fa-calendar-times text-4xl text-gray-400 mb-3"></i>
                    <p class="text-gray-500">No bookings found.</p>
                </div>
            }
        </div>
    </div>
    
    <div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex justify-between items-center">
            <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
                <i class="fas fa-user mr-2 text-primary-500"></i>
                Your Profile
            </h3>
            <a href="#" data-controller="Registrar" data-action="Profile" data-ajax="true" class="text-sm text-primary-600 hover:text-primary-800">
                Edit
            </a>
        </div>
        <div class="px-4 py-5 sm:p-6">
            <div class="flex items-center mb-6">
                <div class="flex-shrink-0">
                    <img class="h-20 w-20 rounded-full" src="@Model.ProfilePictureUrl" alt="@Model.Name">
                </div>
                <div class="ml-4">
                    <h4 class="text-lg font-medium text-gray-900">
                        @Model.FirstName @Model.LastName
                    </h4>
                    <p class="text-sm text-gray-500">
                        @Model.Email
                    </p>
                    <p class="text-xs text-gray-400">
                        Member since @Model.MemberSince.ToString("MMMM yyyy")
                    </p>
                </div>
            </div>
            <dl class="grid grid-cols-1 gap-3">
                <div class="flex justify-between">
                    <dt class="text-sm font-medium text-gray-500">Phone</dt>
                    <dd class="text-sm text-gray-900">@Model.Phone</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-sm font-medium text-gray-500">Organization</dt>
                    <dd class="text-sm text-gray-900">@Model.Organization</dd>
                </div>
                <div class="flex justify-between">
                    <dt class="text-sm font-medium text-gray-500">Venue Categories</dt>
                    <dd class="text-sm text-gray-900">
                        @if (Model.VenueCategories != null && Model.VenueCategories.Any())
                        {
                            <div class="flex flex-wrap gap-1">
                                @foreach (var category in Model.VenueCategories)
                                {
                                    <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-800">
                                        @category
                                    </span>
                                }
                            </div>
                        }
                        else
                        {
                            <span>Not specified</span>
                        }
                    </dd>
                </div>
            </dl>
            
            <div class="mt-6">
                <a href="#" data-controller="Registrar" data-action="Profile" data-ajax="true" class="w-full flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-150">
                    <i class="fas fa-edit mr-2"></i>
                    Edit Profile
                </a>
            </div>
        </div>
    </div>
</div>
<div class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex justify-between items-center">
        <h3 class="text-lg leading-6 font-medium text-gray-900 flex items-center">
            <i class="fas fa-building mr-2 text-primary-500"></i>
            Your Venues
        </h3>
        <a href="#" data-controller="Registrar" data-action="Venues" data-ajax="true" class="text-sm text-primary-600 hover:text-primary-800">
            View All
        </a>
    </div>
    <div class="p-4">
        @if (Model.Venues != null && Model.Venues.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                @foreach (var venue in Model.Venues.Take(3))
                {
                    <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow duration-300">
                        <img class="w-full h-48 object-cover" src="@venue.ImageUrl" alt="@venue.Name">
                        <div class="p-4">
                            <div class="flex justify-between items-start">
                                <h4 class="text-lg font-medium text-gray-900">
                                    @venue.Name
                                </h4>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(venue.IsActive ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800")">
                                    @(venue.IsActive ? "Active" : "Inactive")
                                </span>
                            </div>
                            <p class="mt-1 text-sm text-gray-500 flex items-center">
                                <i class="fas fa-map-marker-alt mr-1"></i>
                                @venue.Location
                            </p>
                            <div class="mt-2 flex items-center">
                                <div class="flex items-center mr-2">
                                    <i class="fas fa-star text-yellow-400 mr-1"></i>
                                    <span class="text-sm text-gray-600">@venue.Rating</span>
                                </div>
                                <span class="text-sm text-gray-500">(@venue.ReviewCount reviews)</span>
                            </div>
                            <div class="mt-4 flex justify-between items-center">
                                <span class="text-primary-600 font-medium">
                                    $@venue.PricePerHour/hr
                                </span>
                                <a href="#" data-controller="Registrar" data-action="EditVenue" data-venue-id="@venue.Id" data-ajax="true" class="inline-flex items-center px-3 py-1.5 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-150">
                                    Manage
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="mt-6 text-center">
                <a href="#" data-controller="Registrar" data-action="AddVenue" data-ajax="true" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-150">
                    <i class="fas fa-plus mr-2"></i>
                    Add New Venue
                </a>
            </div>
        }
        else
        {
            <div class="text-center py-10">
                <i class="fas fa-building text-4xl text-gray-400 mb-3"></i>
                <p class="text-gray-500">You haven't added any venues yet.</p>
                <a href="#" data-controller="Registrar" data-action="AddVenue" data-ajax="true" class="mt-3 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors duration-150">
                    <i class="fas fa-plus mr-2"></i>
                    Add Your First Venue
                </a>
            </div>
        }
    </div>
</div>
<script>
    $(document).ready(function() {
       
    });
</script> 